{
    "compilerOptions": {
       "lib": [
          "es6",
          "dom"
       ],
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "dist",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true
     },
     "include": [
         "src/**/*"
     ],
     "exclude": [
         "src/migrations/**/*",
         "src/seeders/**/*"
     ]
 }